<launch4jConfig>
  <headerType>gui</headerType>
  <jar>../dist/brailleblaster.jar</jar>
  <outfile>../dist/brailleblaster.exe</outfile>
<dontWrapJar>true</dontWrapJar>
  <singleInstance>
    <mutexName>brailleblaster</mutexName>
    <windowTitle>BrailleBlaster</windowTitle>
  </singleInstance> 
  <errTitle>BrailleBlaster</errTitle>
  <chdir>.</chdir>
  <icon>SimpleApp.ico</icon>
  <restartOnCrash>false</restartOnCrash>
  <jre>
    <minVersion>1.6.0</minVersion>
  </jre>
  <splash>
    <file>splash.bmp</file>
    <waitForWindow>true</waitForWindow>
    <timeout>60</timeout>
    <timeoutErr>true</timeoutErr>
  </splash>
</launch4jConfig>