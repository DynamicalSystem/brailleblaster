<?xml version="1.0"?>
<project name="BrailleBlaster" default="dist"
basedir=".">
<property name="src" location="src/main"/>
<property name="build" location="classes"/>
<property name="classpath" location="dist/lib"/>
<target name="init">
<mkdir dir="${build}"/>
</target>
<target name="compile" depends="init">
<javac srcdir="${src}" destdir="${build}"
includeantruntime="false">
<classpath>
<pathelement path="dist/lib"/>
<pathelement location="dist/lib/swt.jar"/>
<pathelement location="dist/lib/commons-exec-1.1.jar"/>
<pathelement location="dist/lib/jliblouisutdml.jar"/>
</classpath>
</javac>
</target>
<target name="dist" depends="compile">
<jar jarfile="dist/brailleblaster.jar" 
basedir="${build}">
<manifest>
<attribute name="Main-Class" value="org.brailleblaster.Main"/>
<attribute name="Class-Path" value="lib/commons-exec-1.1.jar 
lib/jliblouisutdml.jar lib/swt.jar"/>
</manifest>
</jar>
</target>
</project>

